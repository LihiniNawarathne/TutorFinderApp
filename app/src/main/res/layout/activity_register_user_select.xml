<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainUI.registerUserSelect">

    <ImageButton
        android:id="@+id/imgbtnTutor"
        android:layout_width="219dp"
        android:layout_height="177dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTutorRole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRole"
        app:srcCompat="@drawable/tutor" />

    <TextView
        android:id="@+id/tvStudentRole"
        android:layout_width="114dp"
        android:layout_height="43dp"
        android:text="@string/stdntimg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnStudent" />

    <TextView
        android:id="@+id/tvTutorRole"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:text="@string/tutorimg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgbtnStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnTutor" />

    <ImageButton
        android:id="@+id/imgbtnStudent"
        android:layout_width="216dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toTopOf="@+id/tvStudentRole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTutorRole"
        app:layout_constraintVertical_bias="0.809"
        app:srcCompat="@drawable/student" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="306dp"
        android:layout_height="85dp"
        android:layout_marginTop="56dp"
        android:text="@string/selectRole"
        android:textAlignment="center"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgbtnTutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>