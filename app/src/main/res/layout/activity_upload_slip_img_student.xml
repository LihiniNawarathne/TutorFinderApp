<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StudentUI.uploadSlipImgStudent">

    <TextView
        android:id="@+id/tvSlipUpload"
        android:layout_width="302dp"
        android:layout_height="0dp"
        android:layout_marginTop="282dp"
        android:layout_marginBottom="30dp"
        android:foregroundGravity="center"
        android:text="@string/slipactivity"
        android:textAlignment="center"
        android:textColor="@color/ScreenBackground"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/slipimageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/slipimageButton"
        android:layout_width="54dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/etvSlipUpload"
        app:layout_constraintTop_toBottomOf="@+id/tvSlipUpload"
        app:srcCompat="@drawable/ic_attachment_foreground" />

    <Button
        android:id="@+id/btnsendSlip"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/ScreenBackground"
        android:gravity="center"
        android:text="@string/sendSlipbtn"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etvSlipUpload"
        app:layout_constraintStart_toStartOf="@+id/etvSlipUpload"
        app:layout_constraintTop_toBottomOf="@+id/etvSlipUpload" />

    <EditText
        android:id="@+id/etvSlipUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnsendSlip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSlipUpload" />

    <TextView
        android:id="@+id/tvclasspaid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="43dp"
        android:text="@string/ClassName"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvpaidAmount1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvpaidAmount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/amount"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSlipUpload"
        app:layout_constraintStart_toStartOf="@+id/tvSlipUpload" />
</androidx.constraintlayout.widget.ConstraintLayout>